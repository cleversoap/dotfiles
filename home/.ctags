--recurse=yes
--tag-relative=yes
--exclude=*.git*
--exclude=*.pyc
--exclude=*.pyo
--exclude=.DS_Store
--exclude=*.md
--exclude=*.mkd
--exclude=*.swp
--exclude=*.vim
--exclude=*.o
--exclude=*.a
--exclude=*.txt

--langdef=haxe
--langmap=haxe:.hx
--regex-haxe=/^[ \t]*((@:?[a-zA-Z]+) )*((macro|private|public|static|inline) )*function[ \t]+([A-Za-z0-9_]+)/\5/f,function,functions/
--regex-haxe=/^[ \t]*((@:?[a-zA-Z]+) )*((private|public|static|inline) )+var[ \t]+([A-Za-z0-9_]+)/\5/v,variable,variables/
--regex-haxe=/^[ \t]*package[ \t]*([A-Za-z0-9_]+)/\1/p,package/
--regex-haxe=/^[ \t]*((@:?[a-zA-Z]+) )*(extern[ \t]+)?class[ \t]+([A-Za-z0-9_]+)[ \t]*[^\{]*/\4/c,class,classes/
--regex-haxe=/^[ \t]*((@:?[a-zA-Z]+) )*(extern[ \t]+)?interface[ \t]+([A-Za-z0-9_]+)/\4/i,interface/
--regex-haxe=/^[ \t]*typedef[ \t]+([A-Za-z0-9_]+)/\1/t,typedef/
--regex-haxe=/^[ \t]*enum[ \t]+([A-Za-z0-9_]+)/\1/e,enum/

--langdef=actionscript
--langmap=actionscript:.as
--regex-actionscript=/^[ \t]*(private|public|protected|internal|final)[ \t]*class[ \t]+([A-Za-z0-9_]+)[ \t]*/\2/c,class/
--regex-actionscript=/^([ \t]*(private|public|protected|internal|static|final|override))*[ \t]+function[ \t]+([A-Za-z0-9_]+)[ \t]*\(/\3/f,function/
--regex-actionscript=/^[ \t]*[(public)( \t)]*function[ \t]+(set|get)[ \t]+([A-Za-z0-9_]+)[ \t]*\(/\1 \2/p,property/
--regex-actionscript=/^[ \t]*[(private|protected|public|static)]+[ \t]+var[ \t]+([A-Za-z0-9_]+)[ \t]*/\1/v,variable/
--regex-actionscript=/^[ \t]*[(private|protected|public)]+[ \t][static]*[ \t]+const[ \t]+([A-Za-z0-9_]+)[ \t]*/\1/C,constant/
