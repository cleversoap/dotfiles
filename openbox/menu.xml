<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu>
    <menu id="root-menu" label="">
        <item label="Files">
            <action name="Execute">
                <command>thunar</command>
            </action>
        </item>
        <menu id="terminal-menu" label="Terminals">
            <item label="URxvt">
                <action name="Execute">
                    <command>urxvt -e zsh -l -c "tmux -2"</command>
                </action>
            </item>
            <item label="Suckless Terminal">
                <action name="Execute">
                    <command>st -e zsh -l -c "tmux -2"</command>
                </action>
            </item>
            <item label="Alacritty">
                <action name="Execute">
                    <command>alacritty -e zsh -l -c "tmux -2"</command>
                </action>
            </item>
            <item label="Terminator">
                <action name="Execute">
                    <command>terminator</command>
                </action>
            </item>
            <item label="Termite">
                <action name="Execute">
                    <command>termite</command>
                </action>
            </item>
        </menu>
        <menu id="browser-menu" label="Browsers">
            <item label="Vivaldi">
                <action name="Execute">
                    <command>vivaldi-stable</command>
                </action>
            </item>
            <item label="Chromium">
                <action name="Execute">
                    <command>chromium</command>
                </action>
            </item>
        </menu>
        <menu id="apps-menu" label="Apps">
            <menu id="apps-db-menu" label="Database">
                <item label="Robo3T">
                    <action name="Execute">
                        <command>robo3t</command>
                    </action>
                </item>
            </menu>
        </menu>
        <menu id="system-menu" label="System">
            <item label="Reconfigure">
                <action name="Execute">
                    <command>openbox --reconfigure</command>
                </action>
            </item>
        </menu>
        <menu id="exit-menu" label="Exit">
            <item label="Logout">
                <action name="Execute">
                    <command>openbox --exit</command>
                </action>
            </item>
            <item label="Shutdown">
                <action name="Execute">
                    <command>systemctl poweroff</command>
                </action>
            </item>
            <item label="Restart">
                <action name="Execute">
                    <command>systemctl reboot</command>
                </action>
            </item>
            <item label="Suspend">
                <action name="Execute">
                    <command>systemctl suspend</command>
                </action>
            </item>
            <item label="Hibernate">
                <action name="Execute">
                    <command>systemctl hibernate</command>
                </action>
            </item>
        </menu>
    </menu>
</openbox_menu>
